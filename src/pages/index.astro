import Section from '../components/Section.astro'
import H1  from '../components/H1.astro'
import Main from '../components/Main.astro'
---

<Layout title ="OneLoveBeauty "
pageUrl="/"
>

  
  <div class="  md:bg-[url('/images/home.jpg')] bg-[url('/images/phone.jpg')] bg-cover overflow-hidden h-screen" >  

    <div class="text-white text- h-[100dvh]">

      <div class=" bg-gray-800 bg-opacity-40 h-[100%] flex justify-center items-center flex-col">
        <p class="md:text-5xl  sm:text-4xl lg:text-6xl text-2xl font-bold md:text-white text-xephas-yellow  pt-28">ONE LOVE BEAUTY SALON</p>
        <p class="md:text-3xl pt-2 font-thin text-2xl md:text-jovic-bg  text-white  ">Craft Confidence</p>
      </div>
     
    </div>
  </div>

</div>

  <Section>
      
